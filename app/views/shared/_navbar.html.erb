<div class="navbar navbar-expand-sm navbar-light navbar-yam">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag "yam_logo.svg" %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item <%= 'nav-active' if current_page?(dashboard_path) %>">
        <%= link_to "Dashboard",  dashboard_path, class: "nav-link", id: "nav-standard"  %>
      </li>
      <li class="nav-item <%= 'nav-active' if current_page?(flats_path) %>">
        <%= link_to "Mes Appartements",  flats_path, class: "nav-link", id: "nav-standard"  %>
      </li>
       <li id="nav-premium" class="nav-item <%= 'nav-active' if current_page?(passer_premium_path) %>">
        <%= link_to "Yam Premium",  root_path(anchor: 'yam-premium'), class: "nav-link", id: "nav-premium"   %>
      </li>

       <li class="nav-item dropdown">
        <%  if current_user.photos.attached? %>
            <%= cl_image_tag current_user.photos.first.key, class: "avatar dropdown-toggle", id: "navbarDropdown", id: "nav-avatar", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% else %>
            <%= image_tag "user_photo_nil", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
        <% end %>

        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <div class="nav-item <%= 'nav-active' if current_page?(profile_path(current_user)) %>">
              <%= link_to "Mon profil", profile_my_profile_path(current_user), class: "dropdown-item" %>
            </div>
            <div class="d-flex justify-content-around">
              <div class="nav-item <%= 'nav-active' if current_page?(chatrooms_path(current_user.chatrooms)) %>">
                <%= link_to "Messagerie", chatrooms_path, class: "dropdown-item" %>
              </div>
              <div>
                <% if @notification > 0 %>
                  <span class="badge badge-light" id="notif-message"><%= @notification %></span>
                <% end %>
              </div>
            </div>

            <div class="nav-item <%= 'nav-active' if current_page?(destroy_user_session_path) %>">
              <%= link_to "Logout",destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
        </div>
      </li>
      <li>
        <% if @notification > 0 %>
          <span class="badge badge-light" id="notif"><%= @notification %></span>
        <% end %>
      </li>
    </ul>
  </div>
</div>
